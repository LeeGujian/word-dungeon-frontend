    }
    .progress {
      width: 100%;
      height: 10px;
      border-radius: 999px;
      background: #020617;
      overflow: hidden;
      margin-bottom: 12px;
    }
    .progress-inner {
      height: 100%;
      width: 0;
      background: linear-gradient(90deg, #22c55e, #eab308, #ef4444);
